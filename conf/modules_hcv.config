/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Config file for defining DSL2 per module options and publishing paths
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Available keys to override module options:
        ext.args   = Additional arguments appended to command in module.
        ext.args2  = Second set of arguments appended to command in module (multi-tool modules).
        ext.args3  = Third set of arguments appended to command in module (multi-tool modules).
        ext.prefix = File name prefix for output files.
----------------------------------------------------------------------------------------
*/

params {
    strategy = 'mapping'
    mapper = 'bowtie2'
    kraken_all = 'true'
    kraken_focused = "${projectDir}/data/kraken_db/db_hepacivirus/"
    save_output_fastqs = 'true'
    save_reads_assignment = 'true'
    references = "${projectDir}/data/blast_db/HCVgenosubtypes_8.5.19_clean.fa"
    tanoti_stringency_1 = 85
    tanoti_stringency_2 = 95
    minRead = 499
    minCov = 29
}

process {

    withName: 'HCV_ILLUMINA:HCV_GLUE_PARSER.*' {
        publishDir = [
            path: { "${params.outdir}/hcvglue" },
            mode: params.publish_dir_mode,
            pattern: '*.tsv'
        ]
    }

    withName: 'HCV_ILLUMINA:HCV_GLUE.*' {
        time = 12.h
        publishDir = [
            path: { "${params.outdir}/hcvglue" },
            mode: params.publish_dir_mode,
            pattern: '*.{json,html}'
        ]
    }

    withName: 'HCV_ILLUMINA:KRAKEN2_FOCUSED' {
        ext.prefix = { "${meta.id}.focused" }
        publishDir = [
            path: { "${params.outdir}/kraken2" },
            mode: params.publish_dir_mode,
            pattern: '*{report.txt,.classified*.fastq.gz}' // Publish both kraken report and classified files
        ]
    }

    withName: 'HCV_ILLUMINA:KRAKEN2_KRAKEN2' {
        ext.prefix = { "${meta.id}.entireDB" }
        publishDir = [
            path: { "${params.outdir}/kraken2" },
            mode: params.publish_dir_mode,
            pattern: '*{report.txt}' // Publish only kraken2 report
        ]
    }

    withName: 'BOWTIE2_ALIGN' {
        ext.args = "--very-sensitive-local"
        publishDir = [
            enabled: false // Don't publish any files from this process
        ]
    }

    withName: 'HCV_ILLUMINA:PICARD_COLLECTINSERTSIZEMETRICS' {
        label      = "error_ignore"
    }

    withName: 'TANOTI_ALIGN' {
        maxForks = 4
        publishDir = [
            enabled: false // Don't publish any files from this process
        ]
    }

    withName: 'BLAST_MAKEBLASTDB' {
        ext.args = "-dbtype nucl"
        publishDir = [
            enabled: false // Don't publish any files from this process
        ]
    }

    withName: 'BLAST_BLASTN' {
        ext.args = "-outfmt 6"
    }

    withName: 'HCV_ILLUMINA:BLASTPARSE' {
        publishDir = [
            [
                enabled: true,
                path: { "${params.outdir}/blastparse" },
                mode: params.publish_dir_mode,
                pattern: '*.{csv}'
            ],
            [
                enabled: true,
                path: { "${params.outdir}/QC/denovo" },
                mode: params.publish_dir_mode,
                pattern: '*.{png}'
            ]
        ]
    }

    withName: 'HCV_ILLUMINA:SPADES' {
        label    = "error_ignore" // Ignore errors from this process.
        ext.args = "--rnaviral --phred-offset 33"
    }

    withName: 'HCV_ILLUMINA:SAMTOOLS_SORMADUP' {
        label      = "error_ignore" // Ignore errors from this process. Tanoti mapper may in some cases produce small/empty BAM files.
        ext.prefix = { "${meta.id}.firstmapping.nodup" }
        ext.args5 = "-r"
    }

    withName: 'HCV_ILLUMINA:MAJOR_MAPPING:SAMTOOLS_SORMADUP' {
        ext.prefix = { "${meta.id}.${meta.reference}.major.nodup" }
        ext.args5 = "-r"
    }

    withName: 'HCV_ILLUMINA:MINOR_MAPPING:SAMTOOLS_SORMADUP' {
        ext.prefix = { "${meta.id}.${meta.reference}.minor.nodup" }
        ext.args5 = "-r"
    }

    withName: 'HCV_ILLUMINA:GET_MAPPING_STATS_WITHDUP:SAMTOOLS_INDEX' {
        ext.prefix = { "${meta.id}.firstmapping.withdup" }
        publishDir = [
            enabled: false,
            path: { "${params.outdir}/samtools" },
            mode: params.publish_dir_mode,
            pattern: '*.bai'
        ]
    }

    withName: 'HCV_ILLUMINA:GET_MAPPING_STATS_MARKDUP:SAMTOOLS_INDEX' {
        ext.prefix = { "${meta.id}.firstmapping.nodup" }
        publishDir = [
            enabled: true,
            path: { "${params.outdir}/samtools" },
            mode: params.publish_dir_mode,
            pattern: '*.bai'
        ]
    }

    withName: 'HCV_ILLUMINA:GET_MAPPING_STATS_WITHDUP:SAMTOOLS_IDXSTATS' {
        ext.prefix = { "${meta.id}.firstmapping.withdup" }
        publishDir = [
            enabled: false, // Don't publish any files from this process
            path: { "${params.outdir}/samtools" },
            mode: params.publish_dir_mode,
        ]
    }

    withName: 'HCV_ILLUMINA:GET_MAPPING_STATS_WITHDUP:SORT_IDXSTATS' {
        ext.prefix = { "${meta.id}.firstmapping.withdup" }
        publishDir = [
            enabled: true,
            path: { "${params.outdir}/samtools" },
            mode: params.publish_dir_mode,
        ]
    }


    withName: 'HCV_ILLUMINA:GET_MAPPING_STATS_WITHDUP:SAMTOOLS_STATS' {
        ext.prefix = { "${meta.id}.firstmapping.withdup" }
        publishDir = [
            enabled: true,
            path: { "${params.outdir}/samtools" },
            mode: params.publish_dir_mode,
        ]
    }

    withName: 'HCV_ILLUMINA:GET_MAPPING_STATS_MARKDUP:SORT_IDXSTATS' {
        publishDir = [
            enabled: false // Don't publish any files from this process
        ]
    }

    withName: 'HCV_ILLUMINA:GET_MAPPING_STATS_MARKDUP:SAMTOOLS_IDXSTATS' {
        ext.prefix = { "${meta.id}.firstmapping.nodup" }
        publishDir = [
            path: { "${params.outdir}/samtools" },
            mode: params.publish_dir_mode,
        ]
    }

    withName: 'HCV_ILLUMINA:MAJOR_MAPPING:SAMTOOLS_IDXSTATS' {
        ext.prefix = { "${meta.id}.${meta.reference}.nodup" }
    }

    withName: 'HCV_ILLUMINA:MINOR_MAPPING:SAMTOOLS_IDXSTATS' {
        ext.prefix = { "${meta.id}.${meta.reference}.nodup" }
    }

    withName: 'HCV_ILLUMINA:MAJOR_MAPPING:INDEX_MARKDUP' {
        publishDir = [
            path: { "${params.outdir}/samtools" },
            mode: params.publish_dir_mode,
            pattern: '*.bai'
        ]
    }

    withName: 'HCV_ILLUMINA:MAJOR_MAPPING:INDEX_WITHDUP' {
        publishDir = [
            enabled: false // Don't publish any files from this process
        ]
    }

    withName: 'HCV_ILLUMINA:MINOR_MAPPING:INDEX_MARKDUP' {
        publishDir = [
            path: { "${params.outdir}/samtools" },
            mode: params.publish_dir_mode,
            pattern: '*.bai'
        ]
    }

    withName: 'HCV_ILLUMINA:MINOR_MAPPING:INDEX_WITHDUP' {
        publishDir = [
            enabled: false // Don't publish any files from this process
        ]
    }

    withName: 'HCV_ILLUMINA:GET_MAPPING_STATS.*:SAMTOOLS_DEPTH.*' {
        ext.args   = '-aa -d 1000000'
        publishDir = [
            enabled: false // Don't publish any files from this process
        ]
    }

    withName: 'HCV_ILLUMINA:MAJOR_MAPPING:SAMTOOLS_DEPTH' {
        ext.args   = '-aa -d 1000000'
        ext.prefix = { "${meta1.id}.${meta1.reference}.major.nodup" }
    }

    withName: 'HCV_ILLUMINA:MINOR_MAPPING:SAMTOOLS_DEPTH' {
        ext.args   = '-aa -d 1000000'
        ext.prefix = { "${meta1.id}.${meta1.reference}.minor.nodup" }
    }

    withName: 'HCV_ILLUMINA:GET_MAPPING_STATS_MARKDUP:SAMTOOLS_STATS' {
        ext.prefix = { "${meta.id}.firstmapping.nodup" }
        publishDir = [
            path: { "${params.outdir}/samtools" },
            mode: params.publish_dir_mode,
        ]
    }

    withName: 'HCV_ILLUMINA:MAJOR_MAPPING:STATS_WITHDUP' {
        ext.prefix = { "${meta.id}.${meta.reference}.major.withdup" }
        publishDir = [
            path: { "${params.outdir}/samtools" },
            mode: params.publish_dir_mode
        ]
    }

    withName: 'HCV_ILLUMINA:MINOR_MAPPING:STATS_WITHDUP' {
        ext.prefix = { "${meta.id}.${meta.reference}.minor.withdup" }
        publishDir = [
            path: { "${params.outdir}/samtools" },
            mode: params.publish_dir_mode
        ]
    }

    withName: 'HCV_ILLUMINA:MAJOR_MAPPING:STATS_MARKDUP' {
        ext.prefix = { "${meta.id}.${meta.reference}.major.nodup" }
        publishDir = [
            path: { "${params.outdir}/samtools" },
            mode: params.publish_dir_mode
        ]
    }

    withName: 'HCV_ILLUMINA:MINOR_MAPPING:STATS_MARKDUP' {
        ext.prefix = { "${meta.id}.${meta.reference}.minor.nodup" }
        publishDir = [
            path: { "${params.outdir}/samtools" },
            mode: params.publish_dir_mode
        ]
    }

    withName: 'HCV_ILLUMINA:MAJOR_MAPPING:IVAR_CONSENSUS' {
        ext.prefix = { "${meta.id}.major" }
                ext.args = '-t 0 -q 1 -m 10 -n N'
                ext.args2 = '--count-orphans --no-BAQ --max-depth 0 --min-BQ 0 -aa'
    }

    withName: 'HCV_ILLUMINA:MINOR_MAPPING:IVAR_CONSENSUS' {
        ext.prefix = { "${meta.id}.minor" }
                ext.args = '-t 0 -q 1 -m 10 -n N'
                ext.args2 = '--count-orphans --no-BAQ --max-depth 0 --min-BQ 0 -aa'
    }

    withName: 'PLOT_BAM_VARIATION' {
        publishDir = [
            path: { "${params.outdir}/QC/bam_variation" },
            mode: params.publish_dir_mode,
            pattern: '*{.png,.tsv}'
        ]
    }

    withName: 'PLOT_COVERAGE' {
        publishDir = [
            path: { "${params.outdir}/QC/coverage_plots" },
            mode: params.publish_dir_mode,
            pattern: '*{.png}'
        ]
    }

    withName: 'PICARD_COLLECTINSERTSIZEMETRICS' {
        publishDir = [
            path: { "${params.outdir}/QC/insert_size" },
            mode: params.publish_dir_mode,
            pattern: '*{.pdf,.txt}'
        ]
    }

    withName: 'HCV_ILLUMINA:SUMMARIZE' {
        publishDir = [
            [
                // Publish the summary tsv-file
                path: { "${params.outdir}/summary" },
                mode: params.publish_dir_mode,
                pattern: 'Summary.csv'
            ],
            [
                // Publish the bam variation grid plot to the QC directory
                path: { "${params.outdir}/QC/bam_variation" },
                mode: params.publish_dir_mode,
                pattern: '*{.png}'
            ]
        ]
    }
}
